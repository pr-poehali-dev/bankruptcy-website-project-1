{
  "tests": [
    {
      "name": "Handle OPTIONS request",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Reject GET request",
      "method": "GET",
      "path": "/",
      "expectedStatus": 405,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Validate required fields",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "",
        "phone": ""
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject request without reCAPTCHA token",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Иванов",
        "phone": "+7 (999) 123-45-67"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Accept valid contact form with reCAPTCHA",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Иванов",
        "phone": "+7 (999) 123-45-67",
        "debt_amount": "1 000 000 ₽",
        "comment": "Нужна консультация",
        "recaptcha_token": "test_token_for_validation"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "message": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}