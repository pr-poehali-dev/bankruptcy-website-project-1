{
  "tests": [
    {
      "name": "OPTIONS request",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Login with wrong password",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string",
        "attempts_left": "number",
        "message": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Verify code without pending verification",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "verify_code",
        "code": "123456"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Verify token without token",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "verify"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "valid": false
      },
      "bodyMatcher": "partial"
    }
  ]
}
